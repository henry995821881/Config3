                </configuration>
            </plugin> -->
            
            
                 <!-- 远程部署 项目-->
                 <plugin>
                    <groupId>org.apache.tomcat.maven</groupId>
                    <artifactId>tomcat7-maven-plugin</artifactId>
                    <version>2.2</version>
                    <configuration>
                        <url>http://192.168.119.100:8080/manager/text</url>
                        <server>tomcat-id</server>
                        <path>/test</path>
                        <update>true</update>
                    </configuration>
                </plugin>
  </plugins>
    <finalName>test-tomcat-plugin</finalName>
  </build>
  
  
</project>
